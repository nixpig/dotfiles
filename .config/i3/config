# shutdown / restart / suspend...
set $i3lockwall "i3lock -i $HOME/.config/wallpaper/background.png -t -e -f -n"
set $mode_system System (z) remap keys, (i) restart i3, (l) lock, (e) logout, (ctrl+r) reboot, (ctrl+s) shutdown

bindsym $mod+BackSpace mode "$mode_system"
mode "$mode_system" {
    bindsym z exec --no-startup-id $HOME/.local/bin/remap-keys.sh, mode "default"
    bindsym i exec --no-startup-id i3-msg restart, mode "default"
    bindsym l exec --no-startup-id $i3lockwall, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym Ctrl+r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Ctrl+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

